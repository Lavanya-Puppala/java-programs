import java.util.Scanner;
public class Main
{
    public static void main(String[] args)
    {
        int sum=0;
        int average=0;
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter the number of elements you wants to store");
        int n=sc.nextInt();
        int[] array=new int[10];
        System.out.println("Enter the elements of the array:");
        for(int i=0;i<n;i++)
        {
            array[i]=sc.nextInt();
                    }
        for(int i=0;i<n;i++)
        {
            sum+=array[i]; 
        }
        {
            average=sum/n;
            System.out.println("sum of elements of the array:"+sum);
            System.out.println("Average of elements is:"+average);
        }
    }
}
